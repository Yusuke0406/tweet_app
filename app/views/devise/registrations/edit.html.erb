<div class="bgcolor">
  <div class="edit">
    <div class="edit__title">
      <h5>アカウント編集</h5>
    </div>
   <div class="edit__form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="edit__form__block">
    <%= f.label :name , class:"edit__form__block__title"%><br />
    <%= f.text_field :name, autofocus: true,class:"edit__form__block__name"%>
  </div>

  <div class="edit__form__block">
    <%= f.label :email  , class:"edit__form__block__title"%><br />
    <%= f.email_field :email, autocomplete: "email"  ,class:"edit__form__block__name"%>
  </div>

  <div class="edit__form__block">
    <%= f.label  :profile画像  , class:"edit__form__block__title"%><br/>
    <%= f.file_field :image,class:"edit__form__block__file"%>
  </div>

  <div class="edit__form__block__submit">
    <%= f.submit "Update",class:"submit" %>
    <%= link_to "back", :back ,class:"aaa"%>
  </div>
<% end %>

</div>
</div>