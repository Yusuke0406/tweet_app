<div class="container">
  <div class="container__block">
    <div class="container__block__icon">
   </div>
    <div class="container__block__title">
      <h2>アカウント作成</h2>
    </div>
    <div class="container__block__form">
    <%= form_for @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="container__block__form__field">
        <%= f.label :name, {class:"title"}%><br />
        <%= f.text_field :name,class:"form1" %>
      </div>

      <div class="container__block__form__field">
        <%= f.label :email, {class:"title"}%><br />
        <%= f.email_field :email,class:"form1" %>
      </div>

      <div class="container__block__form__field">
        <%= f.label :password,{class:"title"} %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password,class:"form1", autocomplete: "off" %>
      </div>

      <div class="container__block__form__field">
        <%= f.label :password_confirmation ,{class:"title"}%><br />
        <%= f.password_field :password_confirmation,class:"form1", autocomplete: "off" %>
      </div>

      <div class="container__block__form__actions">
        <%= f.submit "作成する" ,class:"submit" %>
      </div>
    <% end %>
  </div>

